conf
	#include "riscv64.h"

	int cpuserver = 1;
	uvlong cpuhz = 1600*MHZ;	/* rdtsc tick freq */
	uvlong timebase = 24*MHZ;	/* clint tick freq */
	Membank membanks[] = {		/* (address, size) pairs */
		PHYSMEM, BANK0SIZE,
		GB, GB,
		/* 2GB gap in dram for i/o at 2GB */
		4ULL*GB,  2ULL*GB,
		6ULL*GB,  4ULL*GB,	/* optional, for larger configs */
		10ULL*GB, 4ULL*GB,
		14ULL*GB, 4ULL*GB,
		0
	};
	char defnvram[] = "/boot/nvram";

	uintptr uartregs[] = { PAUart0 };
	int nuart = nelem(uartregs);
	vlong uartfreq = 14000000;
	int prmsdelay = 80;
	int dmaincoherent = 1;		/* hw botch */

	uchar ether0mac[] = { 0xfe, 0xfe, 0xfe, 0xb7, 0xe1, 0x8d, };

	Soc soc = {
		.clint	 = (char *)PAClint,
		.ether	 = {(char *)0xcac80000,
	//		(char *)0xcac81000,
			},
		.l2cache = 0,			/* use Zicbom instead */
		.pci	 = (char *)0xca000000,	/* ecam for cfg space */
		.pcictl  = (char *)0xc0b00000,	/* bridge, ctrl regs */
		.plic    = (char *)0xe0000000,
		.sdmmc   = (char *)0xd4280000,
		.uart	 = (char *)PAUart0,
	/* 4 possible wdog0 values: d4014000,  d4016000, d4080000, f0616000 */
		.wdog0   = (char *)0xd4080000,	/* see archspacemit.c */

		.hobbled = 0,		/* invis mgmt hart (n308) has M+S */
		.xscaleuart = 1,	/* workaround */
		.idlewakens = 750,	/* ns. to send IPIs to wake wfi cpus */
	};
	Ioconf ioconfs[] = {	/* devices whose drivers vmap their regs */
		{ "ether", PGSZ, &soc.ether[0], Attachenable|131,
			0, .xirqs = 1, },
		{ "ether", PGSZ, &soc.ether[1], Attachenable|133,
			1, .xirqs = 1, },
		0
	};
	Ioconf socconf[] = { /* devices without drivers that vmap their regs */
		{ "clint", 64*KB, &soc.clint, },
		{ "pci",   4*MB, &soc.pci, 56, },	/* pcie ecam cfg */
		{ "pcictl", MB, &soc.pcictl, },	/* pcie br & ctl */
		{ "plic",  64*MB, &soc.plic, },		/* common */
		{ "uart",  PGSZ, &soc.uart, 42, },
		{ "wdog",  PGSZ, &soc.wdog0, 35, },
		{ "sdmmc", PGSZ, &soc.sdmmc, 99, },
		0
	};

